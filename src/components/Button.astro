---
interface Props {
  variant?: 'primary' | 'secondary';
  href?: string;
  type?: 'button' | 'submit';
  class?: string;
}

const { variant = 'primary', href, type = 'button', class: className, ...rest } = Astro.props;

const Element = href ? 'a' : 'button';

import '@/styles/button.css';
---

<Element
  class:list={['button', `button--${variant}`, className]}
  {...href ? { href } : { type }}
  {...rest}
>
  <slot />
</Element>
