---
interface Props {
  title: string;
  variant?: 'light' | 'dark' | 'jungle';
  class?: string;
}

const { title, variant = 'light', class: className } = Astro.props;

import '@/styles/card-outlined.css';
---

<div class:list={['card-outlined', `card-outlined--${variant}`, className]}>
  <h3 class="card-outlined__title">{title}</h3>
  <div class="card-outlined__content">
    <slot />
  </div>
</div>
