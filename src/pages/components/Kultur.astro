---
import CardOutlined from '../../components/CardOutlined.astro';
import styles from '../../styles/kultur.module.css';

const events = [
  {
    title: 'Vernissage: Herbst/Winter 2023',
    date: '15. September 2023',
    description:
      'Seien Sie dabei, wenn wir unsere neue Kollektion präsentieren. Ein Abend voller Mode, Kunst und anregender Gespräche.',
  },
  {
    title: 'Workshop: Nachhaltige Mode',
    date: '22. September 2023',
    description:
      'Lernen Sie mehr über nachhaltige Materialien und bewussten Konsum. Mit Expertinnen aus der Modebranche.',
  },
  {
    title: 'Kunst & Mode',
    date: '29. September 2023',
    description:
      'Eine besondere Ausstellung lokaler Künstlerinnen in Verbindung mit ausgewählten Modestücken.',
  },
];
---

<section id="kultur" class={`layout-outer ${styles.root}`}>
  <div class="layout-inner">
    <div class="title-container">
      <h2 class={`section-title section-title--primary ${styles.title}`}>Kultur & Events</h2>
    </div>
    <p class={styles.intro}>
      Mode ist mehr als Kleidung. Entdecken Sie bei uns regelmäßig neue Ausstellungen, Workshops und
      Events.
    </p>

    <div class={styles.grid}>
      {
        events.map((event) => (
          <CardOutlined title={event.title} variant="light">
            <div class={styles.eventDate}>{event.date}</div>
            <p class={styles.description}>{event.description}</p>
          </CardOutlined>
        ))
      }
    </div>
  </div>
</section>
