---
import CardOutlined from '../../components/CardOutlined.astro';
import Button from '../../components/Button.astro';
import '@/styles/cafe.css';

const menu = {
  drinks: [
    {
      name: 'Bio Kaffee',
      description: 'Frisch geröstete Bohnen aus fairem Handel',
      price: '4.50',
    },
    {
      name: 'Cappuccino',
      description: 'Mit aufgeschäumter Bio-Milch',
      price: '5.50',
    },
    {
      name: 'Matcha Latte',
      description: 'Hochwertiges Matcha mit Hafermilch',
      price: '6.50',
    },
  ],
  food: [
    {
      name: 'Hausgemachter Kuchen',
      description: 'Täglich wechselndes Angebot',
      price: '6.50',
    },
    {
      name: 'Croissant',
      description: 'Frisch gebacken',
      price: '4.50',
    },
    {
      name: 'Avocado Toast',
      description: 'Mit Bio-Eiern und Sprossen',
      price: '12.50',
    },
  ],
};
---

<section id="cafe" class="layout-outer cafe">
  <div class="layout-inner">
    <div class="title-container">
      <h2 class="section-title section-title--primary">Café & Bistro</h2>
    </div>
    <p class="cafe-intro">
      Genießen Sie eine Pause vom Alltag in unserem gemütlichen Café. Wir servieren ausgewählte
      Bio-Kaffeespezialitäten und hausgemachte Leckereien in entspannter Atmosphäre.
    </p>

    <div class="menu-grid">
      <CardOutlined title="Getränke" variant="dark">
        <div class="menu-items">
          {
            menu.drinks.map((item) => (
              <div class="menu-item">
                <div>
                  <h4>{item.name}</h4>
                  <p class="description">{item.description}</p>
                </div>
                <span class="price">CHF {item.price}</span>
              </div>
            ))
          }
        </div>
      </CardOutlined>

      <CardOutlined title="Speisen" variant="dark">
        <div class="menu-items">
          {
            menu.food.map((item) => (
              <div class="menu-item">
                <div>
                  <h4>{item.name}</h4>
                  <p class="description">{item.description}</p>
                </div>
                <span class="price">CHF {item.price}</span>
              </div>
            ))
          }
        </div>
      </CardOutlined>
    </div>

    <div class="cafe-cta">
      <Button href="#contact" variant="primary">Reservierung anfragen</Button>
    </div>
  </div>
</section>
