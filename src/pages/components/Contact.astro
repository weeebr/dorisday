---
import Button from '../../components/Button.astro';
import styles from '../../styles/contact.module.css';

const contactInfo = {
  address: {
    title: 'Adresse',
    lines: ['Laurenzenvorstadt 90', '5000 Aarau'],
  },
  hours: {
    title: 'Öffnungszeiten',
    lines: ['Mo - Fr: 09:00 - 18:30', 'Sa: 09:00 - 16:00'],
  },
  contact: {
    title: 'Kontakt',
    lines: ['Tel: 078 811 52 00', 'Email: dorisday@gmail.com'],
  },
};
---

<section id="contact" class={`layout-outer ${styles.root}`}>
  <div class={styles.imageContainer}>
    <img
      src="https://images.unsplash.com/photo-1517697471339-4aa32003c11a?auto=format&fit=crop&q=80"
      alt="Elegant marble texture background"
      class={styles.image}
    />
  </div>
  <div class={styles.contentWrapper}>
    <div class="layout-inner">
      <div class="title-container">
        <h2 class={`section-title section-title--secondary`}>Kontakt</h2>
      </div>
      <p class={styles.intro}>
        Haben Sie Fragen zu unseren Produkten oder möchten Sie einen persönlichen Termin
        vereinbaren? Wir freuen uns auf Ihre Nachricht.
      </p>

      <div class={styles.grid}>
        <div class={styles.info}>
          {
            Object.entries(contactInfo).map(([key, info]) => (
              <div class={styles.infoGroup}>
                <h4 class={styles.infoGroupTitle}>{info.title}</h4>
                {info.lines.map((line) => (
                  <p class={styles.infoGroupText}>{line}</p>
                ))}
              </div>
            ))
          }
        </div>

        <div class={styles.form}>
          <form action="/api/contact" method="POST">
            <div class={styles.formGroup}>
              <label class={styles.label} for="name">Name</label>
              <input class={styles.input} type="text" id="name" name="name" required />
            </div>

            <div class={styles.formGroup}>
              <label class={styles.label} for="email">Email</label>
              <input class={styles.input} type="email" id="email" name="email" required />
            </div>

            <div class={styles.formGroup}>
              <label class={styles.label} for="message">Nachricht</label>
              <textarea class={styles.textarea} id="message" name="message" required></textarea>
            </div>

            <div class={styles.formSubmit}>
              <Button type="submit" variant="primary">Nachricht senden</Button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
