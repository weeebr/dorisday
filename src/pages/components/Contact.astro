---
import Button from '../../components/Button.astro';
---

<div class="contact-outer">
  <div class="contact-inner">
    <h2>KONTAKTIERE UNS</h2>
    <form>
      <div class="form-group">
        <label>NAME *</label>
        <input
          type="text"
          name="name"
          placeholder="Dein Name (wir freuen uns auf dich!)"
          required
        />
      </div>
      <div class="form-group">
        <label>EMAIL *</label>
        <input type="email" name="email" placeholder="Deine Email-Adresse" required />
      </div>
      <div class="form-group">
        <label>NACHRICHT *</label>
        <textarea
          name="message"
          placeholder="Fragen, Wünsche, Träume... wir sind ganz Ohr."
          required></textarea>
      </div>
      <Button type="submit" variant="secondary">SENDEN</Button>
    </form>
  </div>
</div>

<style>
  @import '@/styles/contact.css';
</style>
