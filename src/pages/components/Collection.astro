---
import Button from '../../components/Button.astro';
import CardWithImage from '../../components/CardWithImage.astro';
import '@/styles/collection.css';

const collections = [
  {
    title: 'Herbst/Winter 2024',
    description: 'Zeitlose Eleganz trifft auf moderne Silhouetten',
    image: 'https://images.unsplash.com/photo-1485968579580-b6d095142e6e?auto=format&fit=crop&q=80',
  },
  {
    title: 'Basics',
    description: 'Essenzielle Stücke für jeden Tag',
    image: 'https://images.unsplash.com/photo-1490481651871-ab68de25d43d?auto=format&fit=crop&q=80',
  },
  {
    title: 'Accessoires',
    description: 'Perfekte Ergänzungen für Ihr Outfit',
    image: 'https://images.unsplash.com/photo-1479064555552-3ef4979f8908?auto=format&fit=crop&q=80',
  },
];
---

<section id="collection" class="layout-outer collection">
  <div class="layout-inner">
    <div class="title-container">
      <h2 class="section-title section-title--secondary">Kollektionen</h2>
    </div>
    <p class="collection-intro">
      Entdecken Sie unsere sorgfältig kuratierten Kollektionen. Jedes Stück wurde mit Bedacht auf
      Qualität, Nachhaltigkeit und zeitloses Design ausgewählt.
    </p>

    <div class="collection-grid">
      {
        collections.map((collection) => (
          <CardWithImage
            title={collection.title}
            image={{ src: collection.image, alt: collection.title }}
          >
            <p>{collection.description}</p>
          </CardWithImage>
        ))
      }
    </div>

    <div class="collection-cta">
      <Button href="/collection" variant="primary">Alle Kollektionen</Button>
    </div>
  </div>
</section>
