---
import Button from '../../components/Button.astro';
import Card from '../../components/Card.astro';

const rooms = [
  {
    image:
      'https://images.unsplash.com/photo-1522771739844-6a9f6d5f14af?auto=format&fit=crop&w=800&q=80',
    title: 'Comfort Room',
  },
  {
    image:
      'https://images.unsplash.com/photo-1560185127-6ed189bf02f4?auto=format&fit=crop&w=800&q=80',
    title: 'Deluxe Suite',
  },
  {
    image:
      'https://images.unsplash.com/photo-1560448204-603b3fc33ddc?auto=format&fit=crop&w=800&q=80',
    title: 'Premium Room',
  },
];
---

<section id="rooms" class="rooms section-alt">
  <div class="container text-center">
    <h2 class="text-2xl mb-md">BED & BEING</h2>
    <div class="divider divider--short divider--fade mb-lg"></div>
    <div class="rooms-grid">
      {
        rooms.map((room) => (
          <Card
            title={room.title}
            image={{
              src: room.image,
              alt: room.title,
            }}
          />
        ))
      }
    </div>
    <div class="mt-lg">
      <Button href="#contact">Jetzt Buchen</Button>
    </div>
  </div>
</section>

<style>
  @import '../../styles/rooms.css';
</style>
