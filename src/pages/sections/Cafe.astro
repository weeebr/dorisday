---
import Button from '../../components/Button.astro';
---

<section class="cafe-outer">
  <div class="cafe-inner">
    <div class="cafe-content">
      <div class="cafe-text">
        <h2>Nomad Café</h2>
        <p class="section-intro">
          Ein Ort zum Verweilen, Geniessen und Austauschen. Unser Café bietet handverlesene
          Kaffeespezialitäten, hausgemachte Leckereien und eine einladende Atmosphäre.
        </p>
        <div class="cafe-details">
          <div class="cafe-detail">
            <h3>Öffnungszeiten</h3>
            <p>Mo - Fr: 09:00 - 18:30</p>
            <p>Sa: 09:00 - 16:00</p>
          </div>
          <div class="cafe-detail">
            <h3>Angebot</h3>
            <p>Spezialitätenkaffee</p>
            <p>Hausgemachte Kuchen</p>
            <p>Leichte Mittagsgerichte</p>
          </div>
        </div>
        <Button href="/cafe" variant="secondary">Mehr erfahren</Button>
      </div>
      <div class="cafe-image">
        <img
          src="https://images.unsplash.com/photo-1521017432531-fbd92d768814?auto=format&fit=crop&q=80"
          alt="Nomad Café - Gemütliche Atmosphäre mit Spezialitätenkaffee"
        />
      </div>
    </div>
  </div>
</section>

<style>
  .cafe-outer {
    width: 100%;
    padding: var(--space-layout-xl) 0;
    background: var(--color-surface-alt);
  }

  .cafe-inner {
    width: min(100% - 4rem, var(--size-content-xl));
    margin-inline: auto;
  }

  .cafe-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-layout-xl);
    align-items: center;
  }

  .cafe-text {
    padding-right: var(--space-layout-lg);
  }

  h2 {
    font-size: var(--font-size-2xl);
    letter-spacing: var(--letter-spacing-wider);
    margin-bottom: var(--space-component-md);
    font-weight: var(--font-weight-light);
  }

  .section-intro {
    color: var(--color-text-muted);
    font-size: var(--font-size-base);
    letter-spacing: var(--letter-spacing-wide);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--space-layout-lg);
  }

  .cafe-details {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-layout-md);
    margin-bottom: var(--space-layout-lg);
  }

  .cafe-detail h3 {
    font-size: var(--font-size-sm);
    letter-spacing: var(--letter-spacing-wider);
    margin-bottom: var(--space-component-md);
    color: var(--color-text-base);
    font-weight: var(--font-weight-light);
  }

  .cafe-detail p {
    color: var(--color-text-muted);
    font-size: var(--font-size-sm);
    letter-spacing: var(--letter-spacing-wide);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--space-component-sm);
  }

  .cafe-image {
    position: relative;
    aspect-ratio: 4/5;
    overflow: hidden;
  }

  .cafe-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-normal);
  }

  .cafe-image:hover img {
    transform: scale(1.05);
  }

  @media (max-width: 1024px) {
    .cafe-content {
      gap: var(--space-layout-lg);
    }

    .cafe-text {
      padding-right: 0;
    }
  }

  @media (max-width: 768px) {
    .cafe-content {
      grid-template-columns: 1fr;
    }

    .cafe-text {
      order: 2;
    }

    .cafe-image {
      order: 1;
      aspect-ratio: 3/2;
    }

    .cafe-details {
      gap: var(--space-layout-sm);
    }
  }
</style>

