---
/* -*- coding: utf-8 -*- */

const rooms = [
  {
    image:
      'https://images.unsplash.com/photo-1522771739844-6a9f6d5f14af?auto=format&fit=crop&w=800&q=80',
    title: 'Comfort Room',
  },
  {
    image:
      'https://images.unsplash.com/photo-1542321993-8fc36217e26d?auto=format&fit=crop&w=800&q=80',
    title: 'Lake View',
  },
  {
    image:
      'https://images.unsplash.com/photo-1560448204-603b3fc33ddc?auto=format&fit=crop&w=800&q=80',
    title: 'Premium Room',
  },
];
---

<section id="rooms" class="section rooms-section">
  <div class="container">
    <div class="text-center">
      <h2 class="text-2xl rooms-heading mb-md">BED & BEING</h2>
      <div class="divider divider--short divider--fade mb-lg"></div>
    </div>
    <div class="grid grid-3 mb-lg">
      {
        rooms.map((room) => (
          <div class="card card--hover">
            <div class="card__image image-container image-container--hover">
              <img src={room.image} alt={room.title} class="image-container__image" />
            </div>
            <h3 class="text-xl mt-md text-center">{room.title}</h3>
          </div>
        ))
      }
    </div>
    <div class="text-center">
      <a href="#contact" class="button">Jetzt Buchen</a>
    </div>
  </div>
</section>

<style>
  @import '../styles/_tokens.css';
  @import '../styles/rooms.css';
</style>
