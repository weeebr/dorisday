---
const rooms = [
  {
    image:
      'https://images.unsplash.com/photo-1522771739844-6a9f6d5f14af?auto=format&fit=crop&w=800&q=80',
    title: 'Comfort Room',
  },
  {
    image:
      'https://images.unsplash.com/photo-1560185127-6ed189bf02f4?auto=format&fit=crop&w=800&q=80',
    title: 'Deluxe Suite',
  },
  {
    image:
      'https://images.unsplash.com/photo-1560448204-603b3fc33ddc?auto=format&fit=crop&w=800&q=80',
    title: 'Premium Room',
  },
];
---

<section id="rooms" class="section" style="background: var(--color-secondary);">
  <div class="container">
    <h2 class="text-medium text-center mb-2">BED & BEING</h2>
    <div class="grid grid-3">
      {
        rooms.map((room) => (
          <div class="p-1">
            <img src={room.image} alt={room.title} class="img-cover mb-1" style="height: 300px;" />
            <h3 class="text-center">{room.title}</h3>
          </div>
        ))
      }
    </div>
    <div class="text-center mt-2">
      <a href="#contact" class="button">Jetzt Buchen</a>
    </div>
  </div>
</section>

