---
import Button from '../../components/Button.astro';

const collections = [
  {
    image: 'https://images.unsplash.com/photo-1485968579580-b6d095142e6e?auto=format&fit=crop&q=80',
    title: 'Herbst/Winter 2024',
    description: 'Zeitlose Eleganz trifft auf moderne Silhouetten',
  },
  {
    image: 'https://images.unsplash.com/photo-1490481651871-ab68de25d43d?auto=format&fit=crop&q=80',
    title: 'Basics',
    description: 'Essenzielle Stücke für jeden Tag',
  },
  {
    image: 'https://images.unsplash.com/photo-1479064555552-3ef4979f8908?auto=format&fit=crop&q=80',
    title: 'Accessoires',
    description: 'Perfekte Ergänzungen für Ihr Outfit',
  },
];
---

<section id="collection" class="collection-outer">
  <div class="collection-inner">
    <h2>Aktuelle Kollektion</h2>
    <p class="section-intro">
      Entdecken Sie unsere sorgfältig kuratierten Kollektionen, die Qualität und Stil vereinen.
    </p>

    <div class="collection-grid">
      {
        collections.map((collection) => (
          <div class="collection-card">
            <div class="image-container">
              <img src={collection.image} alt={collection.title} />
            </div>
            <div class="collection-content">
              <h3>{collection.title}</h3>
              <p>{collection.description}</p>
            </div>
          </div>
        ))
      }
    </div>

    <div class="collection-cta">
      <Button href="/kollektion" variant="secondary">Alle Kollektionen entdecken</Button>
    </div>
  </div>
</section>

<style>
  .collection-outer {
    width: 100%;
    padding: var(--space-layout-xl) 0;
    background: var(--color-surface-muted);
  }

  .collection-inner {
    width: min(100% - 4rem, var(--size-content-xl));
    margin-inline: auto;
  }

  h2 {
    text-align: center;
    font-size: var(--font-size-2xl);
    letter-spacing: var(--letter-spacing-wider);
    margin-bottom: var(--space-component-md);
    font-weight: var(--font-weight-light);
  }

  .section-intro {
    text-align: center;
    max-width: 60ch;
    margin-inline: auto;
    margin-bottom: var(--space-layout-lg);
    color: var(--color-text-muted);
    font-size: var(--font-size-base);
    letter-spacing: var(--letter-spacing-wide);
    line-height: var(--line-height-relaxed);
  }

  .collection-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-layout-md);
    margin-bottom: var(--space-layout-xl);
  }

  .collection-card {
    background: var(--color-surface-base);
    overflow: hidden;
  }

  .image-container {
    aspect-ratio: 3/4;
    overflow: hidden;
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-normal);
  }

  .collection-card:hover .image-container img {
    transform: scale(1.05);
  }

  .collection-content {
    padding: var(--space-component-xl);
    text-align: center;
  }

  .collection-content h3 {
    font-size: var(--font-size-lg);
    letter-spacing: var(--letter-spacing-wide);
    margin-bottom: var(--space-component-sm);
    font-weight: var(--font-weight-light);
  }

  .collection-content p {
    color: var(--color-text-muted);
    font-size: var(--font-size-sm);
    letter-spacing: var(--letter-spacing-wide);
    line-height: var(--line-height-relaxed);
  }

  .collection-cta {
    text-align: center;
    margin-top: var(--space-layout-lg);
  }

  @media (max-width: 1024px) {
    .collection-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-layout-sm);
    }
  }

  @media (max-width: 768px) {
    .collection-grid {
      grid-template-columns: 1fr;
    }

    .collection-content {
      padding: var(--space-component-lg);
    }
  }
</style>
