---
import { supabase } from '../lib/supabase';

const { error } = await supabase.auth.getSession();
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Welcome to Our Site</title>
    <style>
      body {
        font-family:
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          'Segoe UI',
          Roboto,
          sans-serif;
        margin: 0;
        padding: 2rem;
        min-height: 100vh;
        background: #f5f5f5;
      }
      main {
        max-width: 70ch;
        margin: 0 auto;
      }
      .status {
        padding: 1rem;
        border-radius: 0.5rem;
        margin: 1rem 0;
      }
      .success {
        background: #e6ffe6;
        color: #006600;
      }
      .error {
        background: #ffe6e6;
        color: #660000;
      }
    </style>
  </head>
  <body>
    <main>
      <h1>Welcome to Our Site</h1>
      <div class={`status ${error ? 'error' : 'success'}`}>
        {
          error ? (
            <p>Error connecting to database: {error.message}</p>
          ) : (
            <p>âœ“ Database connection successful!</p>
          )
        }
      </div>
      <p>A modern, accessible website optimized for all users.</p>
    </main>
  </body>
</html>
